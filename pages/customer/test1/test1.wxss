.gototop {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  transition: all 0.3s;
  opacity: 0;
  transform: translateY(200rpx) rotate(180deg);
}

.gototop.active {
  opacity: 0.7;
  transform: translateY(0) rotate(180deg);
}

.test-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

