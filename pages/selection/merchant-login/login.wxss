page {
  background-color: #f2f2f2;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #fff;
  border: 2px #ccc solid;
  margin-top: 5px;
  margin-left: 5px;
  margin-right: 5px;
}

.title-top {
  /*最上方登录和注册的布局，flex按行布局*/
  display: flex;
  flex-direction: row;
  height: 100rpx;
  font-family: '楷体';
  font-weight: bold;
}

.title-top-left {
  display: flex;
  flex-direction: row;
  width: 50%;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}

.title-top-right {
  display: flex;
  flex-direction: row;
  width: 50%;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}

