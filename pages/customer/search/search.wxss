.search icon{
    position: absolute;
    top:12px;
    left:12px;
}



.search .search-btn {/*搜索按钮的样式*/
  width: 100rpx;
  border-radius: 50rpx;
  background-color:rebeccapurple;
  margin-left: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 53rpx;
}



.search-history {
  margin-top: 90rpx;
}


.search-operation {/*这个为搜索记录和清空记录的样式,#eee为灰色，#f00为红色，#fff为白色*/
  display: flex;
  padding: 10rpx 20rpx;/*左边的是上下距离，右边的是左右距离*/
  align-items: center;
  justify-content: space-between;
  background-color: #eee;
}
.search-operation view {/*这个应该是点击搜索后显示的标签样式*/
  border: 1rpx solid #eee;
  background-color: #eee;
  border-radius: 10rpx;
  font-size: 25rpx;
}


/*搜索记录的flex样式以及未选中和选中时active的样式*/
.comment {
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 10rpx;
}
.comment .comment-item {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  color: #a67c52;
  border: 1rpx solid #a67c52;
  margin: 10rpx;
}
.comment .active {
  color: #603813;
  background-color: #fdf899;
}
