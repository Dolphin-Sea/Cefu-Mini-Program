.search {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  box-sizing: border-box;
}
.search .search-in {/*输入框中的样式代码*/
  flex: 1;
  box-sizing: border-box;/*以上两句话来控制搜索框的大小*/
  /*font-weight: 600;*/
  height: 53rpx;
  border: 1rpx solid #eee;
  border-radius: 15rpx;
  font-size: 24rpx;
  padding-left: 48rpx;
  position: relative;
}

