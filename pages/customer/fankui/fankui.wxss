/* pages/customer/fankui/fankui.wxss */
page {
  background-color: #f5f5f5;
}

.title{
  margin-top: 36rpx;
  font-size: 26rpx;
  color: #999999;
}

.warp {
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx #dcdcdc solid;
  border-top: 1rpx #dcdcdc solid;
}


.item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx #dcdcdc solid;
  position: relative;
}

.item::after {/*此部分为item后面的图形*/
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  right: 0;
  margin-right: 28rpx;
  margin-top: 30rpx;
}
